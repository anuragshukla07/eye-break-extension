{
  "manifest_version": 3,
  "name": "Eye Break Reminder",
  "version": "1.0",
  "description": "Reminds you to look away from your screen for 20 seconds after every 20 minutes of screen time.",
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
